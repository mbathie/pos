      "permissions": ["*"],
      "description": "Full access to all features"
    },
    "MANAGER": {
      "permissions": ["*"],
      "description": "Management access including setup features"
    },
    "STAFF": {
      "permissions": [
        "/shop",
        "/shop/retail",
        "/shop/payment",
        "/shop/casual",
        "/shop/classes",
        "/checkin",
        "/manage/orders",
        "/manage/casual",
        "/manage/classes",
        "/manage/transactions",
        "/manage/customers",
        "/manage/memberships",
        "/manage/checkins",
        "/manage/accounting",
        "/manage/terminals",
        "/manage/adjustments",
        "/products/groups",
        "/sample-table",
        "/style-guide"
      ],
      "restricted": [
        "process_refund",
        "custom_discount"
      ],
