# MongoDB Database Connection
MONGODB_URI="mongodb://localhost:27017/pos"

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET="your-jwt-secret-here"

# Application Host URL
HOST=http://localhost:3000

# Stripe API Keys (get from Stripe Dashboard)
STRIPE_PUB_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."

# Public API URLs
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_DOMAIN="http://localhost:3000"

# Email Configuration
# Platform options: brevo | ethereal
EMAIL_PLATFORM=ethereal

# Brevo SMTP Configuration (required if EMAIL_PLATFORM=brevo)
# Get these from your Brevo account: https://app.brevo.com/settings/keys/smtp
BREVO_SMTP_USER=your-brevo-smtp-user@smtp-brevo.com
BREVO_SMTP_PASS=your-brevo-smtp-password
BREVO_FROM_EMAIL=no-reply@yourdomain.com

# Ethereal Email Configuration (required if EMAIL_PLATFORM=ethereal)
# Get test credentials from: https://ethereal.email/create
ETHEREAL_SMTP_USER=your-ethereal-user@ethereal.email
ETHEREAL_SMTP_PASS=your-ethereal-password
# Note: When using Ethereal, preview URLs will be logged to console